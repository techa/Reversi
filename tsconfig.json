{
	"name": "vite-svelte-ts-starter",
	"compilerOptions": {
		"module": "es2020",
		"moduleResolution": "Node",
		"target": "ES2015",
		"jsx": "react",
		// "declaration": true,
		// "emitDeclarationOnly": true,
		// "allowImportingTsExtensions": true,
		"strictNullChecks": true,
		"strictFunctionTypes": true,
		"outDir": "dist",
		"types": [
			// import.meta.env.DEVなどを使えるように
			"vite/client"
			// "**/node_modules/@types/"
		]
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.svelte"
	],
	"exclude": [
		"node_modules",
		"**/node_modules/*"
	]
}